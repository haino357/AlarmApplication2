<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">

    <TextView
            android:text="TextView"
            android:layout_width="131dp"
            android:layout_height="0dp"
            android:id="@+id/dateText"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/timeText"
            android:layout_marginTop="72dp" android:layout_marginBottom="7dp"
            app:layout_constraintBottom_toTopOf="@+id/timeText"/>
    <Button
            android:text="@string/alarmSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alarmSetbutton"
            app:layout_constraintTop_toBottomOf="@+id/timeText" android:layout_marginBottom="338dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:text="TextView"
            android:layout_width="194dp"
            android:layout_height="0dp"
            android:id="@+id/timeText"
            app:layout_constraintTop_toBottomOf="@+id/dateText" android:layout_marginBottom="40dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/alarmSetbutton"
            app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>