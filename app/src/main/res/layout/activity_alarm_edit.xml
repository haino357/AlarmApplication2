<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AlarmEditActivity">

    <TextView
            android:layout_width="168dp"
            android:layout_height="59dp"
            android:id="@+id/timeText"
            android:textSize="30sp" android:text="時刻を設定"
            android:layout_marginTop="39dp"
            android:layout_marginBottom="67dp" app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="92dp" android:layout_marginStart="92dp"/>
    <TextView
            android:text="@string/snoozeSet"
            android:layout_width="100dp"
            android:layout_height="19dp"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" app:layout_constraintTop_toBottomOf="@+id/timeText"
            android:layout_marginBottom="12dp" app:layout_constraintBottom_toTopOf="@+id/snoozeText"/>
    <TextView
            android:text="TextView"
            android:layout_width="300dp"
            android:layout_height="26dp"
            android:id="@+id/snoozeText"
            app:layout_constraintStart_toStartOf="@+id/textView2" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toTopOf="@+id/textView"/>

    <TextView
            android:text="TextView"
            android:layout_width="294dp"
            android:layout_height="19dp"
            android:id="@+id/alarmText"
            app:layout_constraintStart_toStartOf="@+id/textView" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="315dp"/>
    <TextView
            android:text="@string/alarmSet"
            android:layout_width="95dp"
            android:layout_height="21dp"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" app:layout_constraintTop_toBottomOf="@+id/snoozeText"
            android:layout_marginBottom="11dp" app:layout_constraintBottom_toTopOf="@+id/alarmText"/>
    <Button
            android:text="保存"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/save" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="38dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="38dp" android:layout_marginBottom="49dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete" android:text="削除"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="79dp"
            android:layout_marginRight="79dp" android:layout_marginBottom="49dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>